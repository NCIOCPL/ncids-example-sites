{% set navigation = [
	{
		"label": "First Section",
		"url": "/section-1/index",
		"id": 1
	},
	{
		"label": "Second Section",
		"url": "/section-2/index",
		"id": 2
	},
	{
		"label": "Third Section",
		"url": "/section-3/index",
		"id": 3
	},
	{
		"label": "Fourth Section",
		"url": "/section-4/index",
    "id": 4
	},
	{
		"label": "Fifth Section",
		"url": "/section-5/index",
		"id": 5
	}
] %}
<header class="nci-header nci-header--extended" aria-label="NIH National Cancer Institute">
	<div class="nci-header__navbar">
		<div class="nci-logo" id="extended-mega-logo">
			<a href="/" aria-label="Example Site Home">
				<picture>
					<source
						media="(min-width: 1024px)"
						srcset="/src/assets/images/logo_NCI.svg"
					/>
					<img src="/src/assets/images/logo_NCI_mobile.svg" alt="" />
				</picture>
			</a>
		</div>

		<div class="nci-header-nav__secondary">
			<button class="usa-button nci-header-mobilenav__open-btn">Menu</button>

			<form class="nci-header-search" role="search">
				<label class="usa-sr-only" for="nci-header-search__field"> Search </label>
				<input class="usa-input" id="nci-header-search__field" type="search" name="search" />

				<button class="usa-button nci-header-search__search-button" type="submit" aria-label="Search">
					<span class="nci-header-search__label" aria-hidden="true"> Search </span>
					<svg class="usa-icon" xmlns="http://www.w3.org/2000/svg" role="img" viewBox="0 0 24 24" aria-labelledby="search-icon-title">
						<title id="search-icon-title">Search</title>
						<path d="M0 0h24v24H0z" fill="none" />
						<path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" />
					</svg>
				</button>
			</form>
		</div>
	</div>
	<nav aria-label="Primary Navigation Example" class="nci-header-nav">
		<div class="nci-header-nav__inner">
			<ul class="nci-header-nav__primary">
				{% for item in navigation %}
					<li class="nci-header-nav__primary-item">
						<a href="{{item.url}}" data-menu-id="{{item.id}}" class="nci-header-nav__primary-link">
							<span>{{item.label}}</span>
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</nav>
</header>
